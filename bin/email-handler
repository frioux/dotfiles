#!/usr/bin/perl

use strict;
use warnings;

use autodie;

use File::Temp;

my $url = shift;
my $id = $url =~ s(^mid:)()r;

my $dir = File::Temp->newdir;

for my $val (
   [undef, ''],
   ["$ENV{HOME}/.zr-notmuch-config", 'zr-']
) {
   $ENV{NOTMUCH_CONFIG} = $val->[0] if $val->[0];
   my $mutt = $val->[1] . 'mutt';

   system qw(notmuch-mutt -r search), "id:$id", '-o', "$dir";

   next unless grep -f, glob "$dir/cur/*";

   system $mutt, qw( -R -f ), "$dir", '-e', 'push <space>';

   exit;
}

exit 1;
