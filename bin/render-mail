#!/usr/bin/perl -n

use Date::Parse;
use POSIX;
use strict;

if (my ($datestr) = m/^Date: (.*)$/) {
  ((undef) x 6, my $zone) = strptime($datestr);

  if ($zone != -7 * 60 * 60) {
    my $date = strftime ("%a, %d %b %Y %H:%m:%S",
                         localtime (str2time ($datestr)));
    print "Local-Date: $date\n";
  }
}

print;
