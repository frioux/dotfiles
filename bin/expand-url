#!/usr/bin/env perl

use 5.24.0;
use warnings;

use utf8;

binmode STDIN, 'encoding(UTF-8)';
binmode STDOUT, 'encoding(UTF-8)';

use HTTP::Cookies::Mozilla;
use Try::Tiny;
use WWW::Mechanize;

my $cj = HTTP::Cookies::Mozilla->new(
   autosave => 0,
   file => '/home/frew/.mozilla/firefox/ami5zns1.default-1493856819600/cookies.sqlite'
);

my $m = WWW::Mechanize->new(
   timeout => 30,
   cookie_jar => $cj,
);

while (<STDIN>) {
   chomp(my $url = $_);

   my ($indent) = ($url =~ m/^(\s*)/);
   $url =~ s/^\s*//; $url =~ s/\s*$//;

   my $cb = "";
   if ($url =~ s/\[([_X])\]\s*//) {
      $cb = "[$1] ";
   }

   try {
      $m->get($url);

      if (my $title = $m->title) {
         $title =~ s/\n/â¤/g;
         say "$indent$cb$title";
         say "$indent\t$url";
      } else {
         say "$indent$cb$url";
      }
   } catch {
      say "$indent$cb$url";
      print "$indent\t$_";
   };
}
