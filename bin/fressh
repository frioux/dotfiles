#!/usr/bin/env perl

use 5.22.0;
use warnings;

# TODO: make this work for ssh options
my $host = shift;

if (!@ARGV) {
   system('ssh', $host, <<'SH');
   set -e
   mkdir -p $HOME/code
   if [ ! -d $HOME/code/dotfiles ]; then
      set -e
      if git --version | perl -E'my (undef, undef, $version) = split /\s+/, <STDIN>; my @v = split /\./, $version; exit if (1002008000 <= 1 . join "", map sprintf("%03d", $_), @v); exit 1'; then
         timeout 20s git clone --quiet -j"$(cat /proc/cpuinfo | grep '^processor' | wc -l)" --recursive git://github.com/frioux/dotfiles $HOME/code/dotfiles
      else
         timeout 20s git clone --quiet git://github.com/frioux/dotfiles $HOME/code/dotfiles
      fi
      cd $HOME/code/dotfiles
      ./install.sh
   fi
   exit 0
SH

   if ($? >> 8) {
      warn "git clone timed out; falling back to rsync\n";

      system('rsync', '-lr', '/home/frew/code/dotfiles/', "$host:/home/frew/code/dotfiles/");

      system('ssh', $host, 'cd /home/frew/code/dotfiles; ./install.sh')
         unless $? >> 8;
   }
}

exec 'ssh', $host, @ARGV
