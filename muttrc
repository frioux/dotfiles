set alias_file        = ~/mail/mutt_aliases
set beep_new          = yes
set charset           = "utf-8"
set confirmappend     = no
set delete            = yes
set editor            = "vim -c 'set tw=70'"
set envelope_from     = "yes"
set fast_reply        = yes
set folder            = "$HOME/Test"
set followup_to       = yes
set from              = "frioux@gmail.com"
# this is an in memory cache since this is a
# tmpfs I generally use for git migrations
set header_cache      = "$HOME/code/tmp/headers"
set honor_followup_to = yes
set include           = yes
set mbox_type         = Maildir
set move              = no
set pager_context     = 5
set pgp_sign_as       = 0x737A7582
set postponed         = "+bak.drafts"
set query_command     = "goobook query '%s'"
set realname          = "fREW Schmidt"
set record            = "+bak.sent"
set sendmail          = "/usr/bin/msmtp"
set sidebar_width     = 30
set sidebar_visible   = yes
set signature         = "~/.signature"
set sleep_time        = 0
set smart_wrap        = yes
set sort_alias        = alias
set sort_aux          = reverse-last-date-received
set sort              = threads
set spoolfile         = +inbox
set status_on_top     = yes
set use_from          = yes
set markers           = no

mailboxes `find ~/Test -maxdepth 1 -type d -printf "+%f "`

macro compose A "<attach-message>?<toggle-mailboxes>" "attach message(s) to this message"
macro index G <last-entry>
macro index gg <first-entry>
macro index C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"
macro index M "<save-message>?<toggle-mailboxes>" "move a message to a mailbox"
macro index,pager c "<change-folder>?<toggle-mailboxes>" "open a different folder"

macro index,pager I1 "<save-message>=alert<enter>$" "mark message as alert"
macro index,pager I2 "<save-message>=crit<enter>$"  "mark message as crit"
macro index,pager I3 "<save-message>=err<enter>$"   "mark message as err"
macro index,pager IT "<save-message>=bak.trash<enter>$"   "delete message"
macro index,pager IS "<save-message>=bak.spam<enter>$"   "mark message as spam"

macro index,pager im "<change-folder>=mitsi<enter>" "view mitsi list"
macro index,pager ii "<change-folder>=inbox<enter>" "view inbox"
macro index,pager i1 "<change-folder>=alert<enter>" "view alert"
macro index,pager i2 "<change-folder>=crit<enter>"  "view crit"
macro index,pager i3 "<change-folder>=err<enter>"   "view err"
macro index,pager iT "<change-folder>=bak.trash<enter>"  "view trash"
macro index,pager iS "<change-folder>=bak.spam<enter>"   "view spam"

ignore *
unignore Date: From: User-Agent: X-Mailer X-Operating-System To: \
         Cc: Reply-To: Subject: Mail-Followup-To:
hdr_order Date: From: User-Agent: X-Mailer X-Operating-System To: \
        Cc: Reply-To: Subject: Mail-Followup-To:

source ~/.mutt/colors
source ~/.mutt/pgp
push <show-version>

